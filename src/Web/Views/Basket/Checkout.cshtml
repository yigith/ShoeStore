@model CheckoutViewModel
@{
    ViewData["Title"] = "Checkout";
}
<div class="row g-5">
    <div class="col-md-5 col-lg-4 order-md-last">
        <vc:checkout-basket />
    </div>
    <div class="col-md-7 col-lg-8">
        <h4 class="mb-3">Shipping address</h4>
        <form class="needs-validation" method="post">
            <div class="row g-3">

                <div class="col-md-8">
                    <label asp-for="Street" class="form-label">Street</label>
                    <input asp-for="Street" type="text" class="form-control" placeholder="1234 Main St" />
                    <div class="text-danger">
                        <span asp-validation-for="Street"></span>
                    </div>
                </div>

                <div class="col-md-4">
                    <label asp-for="City" class="form-label">City</label>
                    <input asp-for="City" type="text" class="form-control">
                    <div class="text-danger">
                        <span asp-validation-for="City"></span>
                    </div>
                </div>

                <div class="col-md-5">
                    <label asp-for="Country" class="form-label">Country</label>
                    <select asp-for="Country" class="form-select">
                        <option value="">Choose...</option>
                        <option>Turkey</option>
                        <option>United States</option>
                    </select>
                    <div class="text-danger">
                        <span asp-validation-for="Country"></span>
                    </div>
                </div>

                <div class="col-md-4">
                    <label asp-for="State" class="form-label">State</label>
                    <input asp-for="State" type="text" class="form-control" />
                    <div class="text-danger">
                        <span asp-validation-for="State"></span>
                    </div>
                </div>

                <div class="col-md-3">
                    <label asp-for="ZipCode" class="form-label">Zip</label>
                    <input asp-for="ZipCode" type="text" class="form-control" placeholder="" />
                    <div class="text-danger">
                        <span asp-validation-for="ZipCode"></span>
                    </div>
                </div>
            </div>

            <hr class="my-4">

            <h4 class="mb-3">Payment</h4>

            <div class="row gy-3">
                <div class="col-md-6">
                    <label asp-for="CCOwner" class="form-label">Name on card</label>
                    <input asp-for="CCOwner" type="text" class="form-control" placeholder="" />
                    <small class="text-muted">Full name as displayed on card</small>
                    <div class="text-danger">
                        <span asp-validation-for="CCOwner"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <label asp-for="CCNumber" class="form-label">Credit card number</label>
                    <input asp-for="CCNumber" type="text" class="form-control" placeholder="" />
                    <div class="text-danger">
                        <span asp-validation-for="CCNumber"></span>
                    </div>
                </div>

                <div class="col-md-3">
                    <label asp-for="CCExpiration" class="form-label">Expiration</label>
                    <input asp-for="CCExpiration" type="text" class="form-control" placeholder="" />
                    <div class="text-danger">
                        <span asp-validation-for="CCExpiration"></span>
                    </div>
                </div>

                <div class="col-md-3">
                    <label asp-for="CCCvv" class="form-label">CVV</label>
                    <input asp-for="CCCvv" type="text" class="form-control" placeholder="" />
                    <div class="text-danger">
                        <span asp-validation-for="CCCvv"></span>
                    </div>
                </div>
            </div>

            <hr class="my-4">

            <button class="w-100 btn btn-primary btn-lg" type="submit">Complete Payment</button>
        </form>
    </div>
</div>