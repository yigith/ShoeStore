@model BasketViewModel

<h4 class="d-flex justify-content-between align-items-center mb-3">
    <span class="text-primary">Your cart</span>
    <span class="badge bg-primary rounded-pill">@Model.TotalItemsCount</span>
</h4>

<ul class="list-group mb-3">

    @foreach (var item in Model.Items)
    {
        <li class="list-group-item d-flex justify-content-between lh-sm">
            <div>
                <h6 class="my-0">@item.ProductName</h6>
                <small class="text-muted">@item.UnitPrice.ToString("c2") x@(item.Quantity)</small>
            </div>
            <span class="text-muted">@item.TotalPrice.ToString("c2")</span>
        </li>
    }


    <li class="list-group-item d-flex justify-content-between">
        <span>Total (USD)</span>
        <strong>@Model.TotalPrice.ToString("c2")</strong>
    </li>
</ul>